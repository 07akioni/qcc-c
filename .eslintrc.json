{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "no-constant-condition": 0,
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never",
            {
                "beforeStatementContinuationChars": "never"
            }
        ],
        "no-console": "off",
        "keyword-spacing": "error",
        "space-before-blocks": "error",
        "space-before-function-paren": "error",
        "no-undef": "off",
        "no-extra-semi": "off",
        "no-unused-vars": "off"
    }
}